
@model Test

@{

    ViewData["Title"] = "Login Page";

}
    <form asp-controller="Access" asp-action="Login" method="post">
        <div class="border p-3 mt-4 ">
    <fieldset>
      <legend>Log In</legend>
      <div class="form-group">
        <label asp-for="Email" class="form-label mt-4">
            Email address
            </label>
        <input asp-for="Email"  type="email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Password" class="form-label mt-4">
            Password
            </label>
        <input asp-for="Password"  type="password" class="form-control" id="Password" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
        </div>
      <label class="m-3" style="display:block" asp-asp-for="KeepLoggedIn">
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me logged In.
        </label>
      <button style="margin-top:20px" type="submit" class="btn btn-primary">
          Login
          </button>
          @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
    </fieldset>
    </div>
    </form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" ></partial>
    }
}

