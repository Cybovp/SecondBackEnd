@model IEnumerable<Test>
@{
    ViewData["Title"] = "Index";
}
<h1>User Database</h1>
<p>You can read user information from here</p>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="RegisterAccount" asp-action="Register" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Create New User Information
                </a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Index</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.DisplayOrder</td>
                    <td>@obj.FirstName</td>
                    <td>@obj.LastName</td>
                    <td>@obj.Age</td>
                    <td>@obj.Email</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="RegisterAccount" asp-action="Edit" asp-route-id="@obj.ID"><i class="bi bi-pencil-square"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-danger mx-2" asp-controller="RegisterAccount" asp-action="Delete" asp-route-id="@obj.ID"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>
</div>